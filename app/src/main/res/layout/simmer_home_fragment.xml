<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/bg_color"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/_zero"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@color/background" />

    <View
        android:id="@+id/_one"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/_zero"
        android:layout_marginTop="5dp"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/_one"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:background="@color/background"
            android:padding="10dp" />

        <View
            android:id="@+id/_tvMore"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/background"
            android:padding="5dp" />

    </RelativeLayout>

    <View
        android:id="@+id/_three"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/_two"
        android:layout_marginTop="5dp"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/_three"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@color/background"
            android:padding="10dp" />

        <View
            android:id="@+id/_tvMore1"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/background"
            android:padding="5dp" />

    </RelativeLayout>

    <View
        android:id="@+id/_five"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/_four"
        android:layout_marginTop="5dp"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/_five"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@color/background"
            android:padding="10dp" />

        <View
            android:id="@+id/_tvMore2"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn"
            android:backgroundTint="@color/background"
            android:padding="5dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/_six"
        android:layout_marginTop="5dp"
        android:background="@color/background" />

</RelativeLayout>
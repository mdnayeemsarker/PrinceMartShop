<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="UselessLeaf">

        <TextView
            android:paddingStart="@dimen/_5ssp"
            android:id="@+id/itemIdId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID #123456"
            android:textColor="@color/black"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/historySellerNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="Seller Name"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/historyAmountId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/light_green"
                android:padding="@dimen/_3ssp"
                android:text="Amount"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NestedWeights,TextContrastCheck" />

            <TextView
                android:id="@+id/historyDiscountId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/received_status_bg"
                android:gravity="end"
                android:padding="@dimen/_3ssp"
                android:text="Discount"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/historyPayableId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cb_dark_blue_button"
                android:gravity="end"
                android:padding="@dimen/_3ssp"
                android:text="Payable"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/historyDateCreateId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_3ssp"
                android:text="Date Created"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NestedWeights,TextContrastCheck" />

<!--            <TextView-->
<!--                android:id="@+id/historyLastUpdateId"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Update"-->
<!--                android:padding="@dimen/_3ssp"-->
<!--                android:textColor="@color/black"-->
<!--                android:gravity="end"-->
<!--                android:textStyle="bold"-->
<!--                tools:ignore="HardcodedText" />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:paddingStart="@dimen/_5ssp"
                android:id="@+id/historyStatusId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:visibility="gone"
                android:paddingStart="@dimen/_5ssp"
                android:id="@+id/historyCashBackId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
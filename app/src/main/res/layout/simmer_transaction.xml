<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    android:padding="7dp">

    <RelativeLayout
        android:id="@+id/lyt_tx1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/background" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/lyt_tx1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/lyt_tx2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view">

        <View
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/background" />

        <View
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@color/background"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_order2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_tx2"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="15sp"
                android:background="@color/background" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="15sp"
                android:layout_marginTop="2dp"
                android:background="@color/background" />

        </LinearLayout>

        <View
            android:layout_width="120dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:background="@color/background"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_order2"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/tv1TxMessageTitle"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:background="@color/background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/tv1TxMessageTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:background="@color/background" />

    </RelativeLayout>
</RelativeLayout>